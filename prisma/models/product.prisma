model Product {

    id                          Int             @id @default(autoincrement())
    name                        String
    description                 String
    image                       String
    drawingModel                String
    unit                        String
    features                    String
    // "Geral". Não tenho certeza se isso é um relacionamento ou parte do modelo
    brand                       String?
    category                    String?
    subcategory                 String?
    unitMeasure                 String?
    sku                         String?
    validity                    String?
    liqWeight                   String?
    grossWeight                 String?
    mass                        String?
    volume                      String?

    receipt                     ProductReceipt[]

}



model ProductReceipt {

    id                          Int             @id @default(autoincrement())
    number                      String
    productCode                 String
    receiptDescription          String
    cfop                        String
    ncm                         String
    commercialUnit              String
    tributaryUnit               String
    commercialQuantity          String
    tributaryQuantity           String
    commercialUnitValue         String
    tributaryUnitValue          String
    grossValue                  String
    icmsOrigin                  String
    additionalInfo              String

    productId                   Int
    product                     Product         @relation(fields: [productId], references: [id], onDelete: Cascade)

}


